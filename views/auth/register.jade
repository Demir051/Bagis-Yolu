doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Kayıt Olma Sayfası
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")

    style.

        body {
            background-image: url('../static/images/deprem.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
         }

  body
    .container
      .row.justify-content-center.align-items-center.min-vh-100
        .col-md-6
          .card
            .card-body
              if message
                .alert(class=`alert-${alert}` , role='alert')
                  = message
              h5.card-title Kayıt Ol
              br
              form(action="#" method="post")
                .mb-3
                  label(for="username" class="form-label") Kullanıcı Adı
                  input#username.form-control(type="text" name="username")
                .mb-3
                  label(for="email" class="form-label") Email
                  input#email.form-control(type="email" name="email")
                .mb-3
                  label(for="password" class="form-label") Şifre
                  input#password.form-control(type="password" name="password")
                .mb-3
                  label(for="confirmPassword" class="form-label") Şifre Tekrar
                  input#confirmPassword.form-control(type="password" name="confirmPassword")
                .mb-3
                  button.btn.btn-primary(type="submit") Kayıt Ol
              a(href="/") Anasayfaya Dön
