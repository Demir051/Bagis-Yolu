doctype html
html(lang="tr")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Profil | #{fullName} 
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="../static/stylesheets/navbar.css")

  body

    include ../partials/navbar

    .container.d-flex.justify-content-center.align-items-center.mt-3
      .card(style="width: 30rem; height: 25rem;" class="d-flex justify-content-center align-items-center") 
        .user.text-center 
          .profile
            img.rounded-circle(width="80", src="../../static/images/profil.png", alt="Profile Image")
        .mt-4.text-center
          h4.mb-0 #{fullName}
          p.mb-3 #{userEmail}
          a(href=`/profil/edit/${userSlugUrl}`) 
            button.btn.btn-primary.btn-sm.follow.mb-2(style="background-color: #5454b6; border:none;") Edit Name
          br
          if userRole !== "user"
            a(href="/adminpanel")
              button.btn.btn-secondary.btn-sm.follow Admin Panel
            

    include ../partials/scripts
