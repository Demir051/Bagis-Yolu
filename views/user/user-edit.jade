doctype html
html(lang="tr")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Kullanıcı Edit | #{username}
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    link(rel="stylesheet", href="../static/stylesheets/navbar.css")

  body
    include ../partials/navbar

    div.container.d-flex.justify-content-center.align-items-center
      .row
          h2.mb-3 Edit Name
          if errorMessage
            .alert.alert-danger= errorMessage

          form(method='POST')
            .form-group.mb-3
              label(for='fullName') New Name:
              input#fullName.form-control(type='text', name='fullName', required)
            .form-group.mb-3
              label(for='password') Password:
              input#password.form-control(type='password', name='password', required)
            .form-group.mb-3
              label(for='confirmPassword') Confirm Password:
              input#confirmPassword.form-control.mb-3(type='password', name='confirmPassword', required)

            button.btn.btn-primary(type='submit' style="background-color: #5454b6; border:none;") Save Changes
          
    include ../partials/scripts
