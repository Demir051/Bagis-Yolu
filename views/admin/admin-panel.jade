doctype html
html(lang="tr")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Kullanıcılar - Admin Paneli
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    link(rel="stylesheet", href="../static/stylesheets/navbar.css")

  body
    include ../partials/navbar

    .container
      h2 Kullanıcılar

      table.table.table-bordered.table-striped
        thead
          tr
            th ID
            th Adı
            th Email
            th Rol
            th İşlemler

        tbody
          each user in allUsers
            tr
              td= user.id
              td= user.username
              td= user.email
              td= user.id
              td
                a.btn.btn-danger(href=`/adminpanel/kullanicisil/${user.id}`) Sil
                a.btn.btn-primary(href=`/adminpanel/roldegistir/${user.id}`) Rol Değiştir
    script(src="../static/javascripts/script.js")