doctype html
html(lang="tr")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{username} | Bağış Yolu
    link(rel="stylesheet", href="../static/stylesheets/navbar.css")
    link(rel="stylesheet", href="../libs/bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
  body

    include ./partials/navbar

    .container
        h2 Edit Profile
        form(action='/profil', method='POST')
            .form-group
                label(for='fullName') Full Name:
                input#fullName.form-control(type='text', name='fullName', required)
            .form-group
                label(for='password') Password:
                input#password.form-control(type='password', name='password', required)
            .form-group
                label(for='confirmPassword') Confirm Password:
                input#confirmPassword.form-control(type='password', name='confirmPassword', required)
            button.btn.btn-primary(type='submit') Save Changes
